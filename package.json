{
  "name": "SBA_ROOMS",
  "version": "0.1.0",
  "private": true,
  "description": "A description for the SBA Rooms application.",
  "author": "Your Name",
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "@mui/styles": "^6.5.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "bootstrap": "^5.3.7",
    "chart.js": "^4.5.0",
    "date-fns": "^4.1.0",
    "electron-is-dev": "^3.0.1",
    "firebase": "^12.1.0",
    "framer-motion": "^12.23.12",
    "jspdf": "^3.0.1",
    "react": "^19.1.1",
    "react-bootstrap": "^2.10.10",
    "react-chartjs-2": "^5.3.0",
    "react-datepicker": "^8.5.0",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-modal": "^3.16.3",
    "react-router-dom": "^7.8.1",
    "react-scripts": "5.0.1",
    "styled-components": "^6.1.19",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build-react": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:start": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "electron-builder",
    "package:mac": "npm run build-react && npm run electron:build -- --mac",
    "package:win": "npm run build-react && npm run electron:build -- --win"
  },
  "build": {
    "appId": "com.sbarooms.app",
    "productName": "SBA Rooms",
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js"
    ],
    "extraMetadata": {
      "main": "public/electron.js"
    },
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.4"
  }
}
